<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="名字" />

    <TextView
        android:id="@+id/tv_wifi_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_wifi_name"
        android:layout_marginEnd="10dp"
        android:text="强度" />

    <TextView
        android:id="@+id/tv_wifi_frequency"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/tv_wifi_rssi"
        android:layout_marginEnd="10dp"
        android:text="频段"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_wifi_wpa"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/tv_wifi_frequency"
        android:layout_marginEnd="10dp"
        android:text="加密方式"
        android:layout_height="wrap_content" />
</RelativeLayout>